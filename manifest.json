{
    "name": "SmartFaves",
    "description": "Automatically categorizes bookmarks as you add them",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Click to get page info."
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "bookmarks",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html"
}